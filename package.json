{
  "name": "blynx-browser",
  "version": "1.0.0",
  "description": "Blynx - A full-featured web browser built with Electron",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "browser",
    "electron",
    "web",
    "internet",
    "blynx"
  ],
  "author": "Blynx Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "extract-zip": "^2.0.1"
  },
  "build": {
    "appId": "com.blynx.browser",
    "productName": "Blynx",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "extraMetadata": {
      "name": "Blynx",
      "productName": "Blynx"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/favicon.ico",
      "executableName": "Blynx",
      "signAndEditExecutable": true
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "src/assets/App-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/App-icon.png"
    }
}
}
